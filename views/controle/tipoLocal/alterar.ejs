<div class="row">
	<div class="col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
		<form id="form" class="panel panel-default" action="#">
			<div class="panel-heading">Adicionar Tipo de Local</div>
			<div class="panel-body no-bottom">
				<input type="hidden" id="id_tipo_local" name="id_tipo_local" value="<%=(item ? item.id_tipo_local : 0) %>" />
				<div class="form-group">
					<label for="nome_tipo_local">Nome do tipo de local</label>
					<input id="nome_tipo_local" name="nome_tipo_local" maxlength="255" class="form-control" type="text" spellcheck="false" value="<%=(item ? item.nome_tipo_local : '') %>" />
				</div>
			</div>
			<div class="panel-footer">
				<input value="<%=(item ? 'Salvar Alterações' : 'Criar') %>" class="btn btn-primary btn-lg btn-block" type="submit" />
			</div>

		</form>
	</div>
</div>

<%- contentFor("scripts") %>
<script type="text/javascript">
	//<![CDATA[
	"use strict";

	$("#form").validate({
		rules: {
			nome_tipo_local: {
				required: true,
				minlength: 3,
				maxlength: 255
			},
		},

		submitHandler: function (form) {
			if (JsonWebApi.active)
				return;

			Notification.wait();

			//<% if (item) { %>

			JsonWebApi.postFormData("/api/tipoLocal/alterar", form, function (response) {
				if (response.success)
					Notification.success("Tipo de local alterado com sucesso! \uD83D\uDE04");
				else
					Notification.error(response.value, true);
			});

			//<% } else { %>

			JsonWebApi.postFormData("/api/tipoLocal/criar", form, function (response) {
				if (response.success) {
					form.reset();
					$("#form").validate().resetForm();
					Notification.success("Tipo de local criado com sucesso! \uD83D\uDE04");
				} else {
					Notification.error(response.value, true);
				}
			});

			//<% } %>
		}
	});
    //]]>
</script>

